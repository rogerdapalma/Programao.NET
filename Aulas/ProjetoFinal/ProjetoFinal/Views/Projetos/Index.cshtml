@model IEnumerable<ProjetoTarefasMVC.Models.Projeto>

@{
    ViewData["Title"] = "Projetos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Projetos</h2>
        <a class="btn btn-success" asp-action="Create">
            <i class="bi bi-plus-lg"></i> Novo Projeto
        </a>
    </div>

    <table class="table table-striped table-hover table-bordered rounded">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                <th>@Html.DisplayNameFor(model => model.Cliente)</th>
                <th>@Html.DisplayNameFor(model => model.DataInicio)</th>
                <th>@Html.DisplayNameFor(model => model.DataFim)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cliente)</td>
                    <td>@item.DataInicio.ToString("dd/MM/yyyy")</td>
                    <td>@(item.DataFim.HasValue ? item.DataFim.Value.ToString("dd/MM/yyyy") : "-")</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a class="btn btn-sm btn-info text-white" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
