@model IEnumerable<ProjetoTarefasMVC.Models.Tarefa>

@{
    ViewData["Title"] = "Tarefas";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Tarefas</h2>
        <a class="btn btn-success" asp-action="Create">
            <i class="bi bi-plus-lg"></i> Nova Tarefa
        </a>
    </div>

    <table class="table table-striped table-hover table-bordered rounded">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Titulo)</th>
                <th>@Html.DisplayNameFor(model => model.Descricao)</th>
                <th>@Html.DisplayNameFor(model => model.Status)</th>
                <th>Projeto</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Titulo</td>
                    <td>@item.Descricao</td>
                    <td>
                        <span class="badge bg-secondary">@item.Status</span>
                    </td>
                    <td>@(item.Projeto?.Nome ?? "-")</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a class="btn btn-sm btn-info text-white" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
