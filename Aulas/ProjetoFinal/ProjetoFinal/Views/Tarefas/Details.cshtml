@model ProjetoTarefasMVC.Models.Tarefa

@{
    ViewData["Title"] = "Detalhes da Tarefa";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4>Detalhes da Tarefa</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Título</dt>
                        <dd class="col-sm-9">@Model.Titulo</dd>

                        <dt class="col-sm-3">Descrição</dt>
                        <dd class="col-sm-9">@Model.Descricao</dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-secondary">@Model.Status</span>
                        </dd>

                        <dt class="col-sm-3">Projeto</dt>
                        <dd class="col-sm-9">@Model.Projeto?.Nome</dd>
                    </dl>

                    <div class="mt-4 d-flex justify-content-between">
                        <a class="btn btn-secondary" asp-action="Index">
                            <i class="bi bi-arrow-left"></i> Voltar para tarefas
                        </a>
                        <a class="btn btn-secondary" asp-controller="Projetos" asp-action="Details" asp-route-id="@ViewData["ProjetoId"]">
                            <i class="bi bi-arrow-left"></i> Voltar para o Projeto
                        </a>

                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
