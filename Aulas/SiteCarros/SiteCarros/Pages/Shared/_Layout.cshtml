<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - SiteCarros</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <style>
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
        }

        .navbar-custom {
            background: #2c3e50;
        }

        .navbar-brand, .nav-link, .btn-outline-light {
            color: #ecf0f1 !important;
        }

            .btn-outline-light:hover {
                background-color: #34495e;
            }

        footer {
            background: #f8f9fa;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <header class="navbar navbar-expand-lg navbar-custom mb-3 px-3">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-page="/Index">🚗 SiteCarros</a>
            <div class="d-flex gap-2">
                <a class="btn btn-outline-light" asp-page="/Index">Início</a>
                <a class="btn btn-outline-light" asp-page="/Veiculos/Index">Lista Carros</a>
                <a class="btn btn-outline-light" asp-page="/Veiculos/Create">Cadastrar</a>
            </div>
        </div>
    </header>

    <main class="container">
        @RenderBody()
    </main>

    <footer class="text-center mt-4 py-3 border-top">
        SiteCarros © 2025
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
