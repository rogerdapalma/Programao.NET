@page
@model DotNet.Pages.Usuarios.EditarModel
@{
    ViewData["Title"] = "Editar Usuario";
}
<h2>@ViewData["Title"]</h2>

<form method="post">
    <div>
        <label for="Id">ID: </label>
        <input type="number" id="Id" name="Usuario.Id" value="@Model.Usuario.Id" readonly />
    </div>
    <div>
        <label for="Nome">Nome do usuario: </label>
        <input type="text" id="Nome" name="Usuario.Nome" value="@Model.Usuario.Nome" required />
    </div>
    <div>
        <label for="Senha">Senha: </label>
        <input type="password" id="Senha" name="Usuario.Senha" value="@Model.Usuario.Senha" required />
    </div>
    <div>
        <label for="Email">Email: </label>
        <input type="email" id="Email" name="Usuario.Email" value="@Model.Usuario.Email" required />
    </div>
    <button type="submit">Salvar</button>
    <a asp-page="/Usuarios/Index">Voltar</a>
</form>
